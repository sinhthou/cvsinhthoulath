{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container-fluid">
        
    <div class="row" id="registerform">

        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <div class="col-md-12" id="registerin">Register</div>

        <div class="col-md-12" id="register">
            {{ form_start(registrationForm) }}
                <div class="col-md-12" id="registermail">{{ form_row(registrationForm.email) }}</div>
                <div class="col-md-12" id="registermdp">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</div>
                <div class="col-md-12" id="registerterms">{{ form_row(registrationForm.agreeTerms) }}</div>
                <div class="col-md-12" id="registerconfirm"><button type="submit" id="registerconfirmbutton" class="btn">Register</button></div>
            {{ form_end(registrationForm) }}
        </div>

    </div>
    <!-- FIN ROW -->

</div>
<!-- FIN CONTAINER -->

{% endblock %}
